{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "pre-commit": {
    "parallel": true,
    "commands": {
      "lint:typescript": {
        "glob": "*.{ts,tsx}",
        "run": "bunx @biomejs/biome check --write --no-errors-on-unmatched --files-ignore-unknown=true {staged_files}",
        "stage_fixed": true
      },
      "lint:javascript": {
        "glob": "*.{js,jsx}",
        "run": "bunx @biomejs/biome check --write --no-errors-on-unmatched --files-ignore-unknown=true {staged_files}",
        "stage_fixed": true
      },
      "lint:json": {
        "glob": "*.json",
        "run": "bunx @biomejs/biome check --write --no-errors-on-unmatched --files-ignore-unknown=true {staged_files}",
        "stage_fixed": true
      }
    }
  },
  "commit-msg": {
    "commands": {
      "lint:commit": {
        "run": "bunx commitlint --config ./commitlint.json --edit {1}"
      }
    }
  }
}
