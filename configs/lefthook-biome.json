{
	"$schema": "https://json.schemastore.org/lefthook.json",
	"pre-commit": {
		"parallel": true,
		"commands": {
			"lint:biome": {
				"glob": "*.{ts,tsx,js,jsx,json,jsonc,css,graphql,gql}",
				"run": "bunx @biomejs/biome check --write --no-errors-on-unmatched --files-ignore-unknown=true {staged_files}",
				"stage_fixed": true
			}
		}
	}
}
