{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"root": false,
	"formatter": {
		"useEditorconfig": true,
		"formatWithErrors": true,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"css": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"rules": {
			"style": {
				"noParameterAssign": "warn",
				"useConsistentArrayType": {
					"level": "error",
					"options": {
						"syntax": "generic"
					}
				}
			},
			"complexity": {
				"useArrowFunction": "error"
			}
		}
	}
}
